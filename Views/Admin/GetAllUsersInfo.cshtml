@model List<TaskManagementSystem.Models.Helper.UserInfoHolder>
@{
    ViewBag.Title = "GetAllUsers";
}

<h2>GetAllUsers</h2>

<div>
    <div>
        @foreach (var user in Model)
        {

        <ul>

            <li>
                Name: @user.Name  Daily Salary:$ @user.Salary
                <span class="btn btn-danger btn-xs">@Html.ActionLink("Delete", "DeleteUser", "Admin", new { userId = user.Id }, null)</span>
            </li>

            @foreach (var role in user.RolesInfo)
            {
                <ul>


            <li>
                @role.Name
                @Html.ActionLink("Remove Role", "RemoveUserFromRole", "Admin", new { userId = user.Id, role = role.Name }, null)
            </li>
                    </ul>

            }
        </ul>
       
        }
    </div>
</div>

<div>
    <span class="btn btn-info btn-xs">@Html.ActionLink("Add new User", "AddUser", "Admin")</span>
    <span class="btn btn-info btn-xs">@Html.ActionLink("Add new Role", "AddRole", "Admin")</span>
    <span class="btn btn-info btn-xs">@Html.ActionLink("Get all Users Info", "GetAllUsersInfo", "Admin")</span>
    <span class="btn btn-info btn-xs">@Html.ActionLink("Get all Roles", "GetAllRoles", "Admin")</span>
    <span class="btn btn-info btn-xs">@Html.ActionLink("Add User to Role", "AddUserToRole", "Admin")</span>
</div>