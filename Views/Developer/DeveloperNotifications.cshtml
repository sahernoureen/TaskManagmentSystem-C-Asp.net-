
@model List<TaskManagementSystem.Models.ProjectClasses.NotificationDev>

@if (Model.Count > 0)
{

    <p> View All Notifications</p>
    <ul>
        @foreach (var Notifi in Model)
        {
            if (Notifi.IsRead==false)
            {
                <li><span style="background-color:lightgray"> @Notifi.Comment &nbsp;&nbsp; @Notifi.DateCreated.ToLongDateString() </span></li>
                @Html.ActionLink("More Details of The task for this Notification", "GetDetailOfANotification", "Developer", new { NotifiId = Notifi.Id}, null)
            }
            else
            {
                <li>@Notifi.Comment &nbsp;&nbsp; @Notifi.DateCreated.ToLongDateString() </li>
                @Html.ActionLink("More Details of The task for this Notification", "GetDetailOfANotification", "Developer", new { NotifiId = Notifi.Id }, null)
            }

        }

    </ul>

    @Html.ActionLink("back To Developer Main page", "Index", "Developer");

}


