@model TaskManagementSystem.Models.ProjectClasses.DevTask


<h4>Update Task</h4>
<hr />
<li>Project Title: @Model.Title</li>
<li>Description: @Model.Description</li>
<li>Priority: @Model.Priority</li>
<li>Status: @Model.Status</li>
<li>DateCreated: @Model.DateCreated</li>
<li>Deadline: @Model.Deadline</li>
@if (Model.DateCompleted == null) {
    <li>Date Completed: Not Yet Completed</li>
} else {
    <li>Date Completed: @Model.DateCompleted</li>
}
@if (Model.Comment != null) {
    <li>Comment: @Model.Comment</li>
}

@using (Html.BeginForm("UpdateDeveloperTask", "Developer", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.PercentCompleted, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PercentCompleted, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}
@Html.ActionLink("Back to Dashboard", "Index")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

