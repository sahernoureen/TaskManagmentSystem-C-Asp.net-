
@model TaskManagementSystem.Models.ProjectClasses.DevTask


<h2 class="centerText">Report A Bug here</h2>

<br />
<br />

<li>Project Title: @Model.Title</li>
<li>Description: @Model.Description</li>
<li>Priority: @Model.Priority</li>
<li>Status: @Model.Status</li>
<li>DateCreated: @Model.DateCreated</li>
<li>Deadline: @Model.Deadline</li>
<li>Date Completed: @Model.DateCompleted</li>
<li>Percent Completed: @Model.PercentCompleted</li>

@using (Html.BeginForm("ReportABug", "Developer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Comment", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BugReport, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Report Bug" />
        </div>
    </div>
}
@Html.ActionLink("Back to Dashboard", "Index")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

