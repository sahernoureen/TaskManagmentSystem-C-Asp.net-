

@model List<TaskManagementSystem.Models.ProjectClasses.NotificationManager>

@if (Model.Count > 0)
{

    <p> View All Notifications</p>
    <ul>
        @foreach (var Notifi in Model)
        {
            if (Notifi.IsChecked == false)
            {
                <li><span style="background-color:lightgray"> @Notifi.Comment &nbsp;&nbsp; @Notifi.DateCreated.ToLongDateString() </span></li>
                @Html.ActionLink("More Details for this Notification", "GetDetailOfANotifiction", "ProjectManager", new {  NotifiId= Notifi.Id}, null)
            }
            else
            {
                <li>@Notifi.Comment &nbsp;&nbsp; @Notifi.DateCreated.ToLongDateString() </li>
                @Html.ActionLink("More Details  for this Notification", "GetDetailOfANotifiction", "ProjectManager", new { NotifiId= Notifi.Id }, null)
            }

        }

    </ul>

    @Html.ActionLink("back To Manager Main page", "Index", "ProjectManager");

}


