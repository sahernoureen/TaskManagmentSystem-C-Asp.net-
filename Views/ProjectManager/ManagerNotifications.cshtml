

@model List<TaskManagementSystem.Models.ProjectClasses.NotificationManager>

<h2 class="centerText">All Notifications</h2>

<div class="Notifi">
    @if (Model.Count > 0)
    {
        <br /><br />
        <table class="table table-hover">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Message
                </th>
                <th></th>
            </tr>

            @foreach (var Notifi in Model)
            {
                if (Notifi.IsChecked == false)
                {
                    <tr style="background-color:lightgray">
                        <td>
                            @Html.DisplayFor(modelItem => Notifi.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Notifi.Comment)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "GetDetailOfANotifiction", "ProjectManager", new { NotifiId = Notifi.Id }, null)
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Notifi.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Notifi.Comment)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "GetDetailOfANotifiction", "ProjectManager", new { NotifiId = Notifi.Id }, null)
                        </td>
                    </tr>
                }


            }

        </table>


    }

    @Html.ActionLink("Back To Manager DashBoard", "Index", "ProjectManager")
</div>


